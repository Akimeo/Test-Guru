<h1><%= @test.title %></h1>

<p>
  <strong>Author:</strong>
  <%= @test.author.name %><br>
  <strong>Category:</strong>
  <%= @test.category.title %><br>
  <strong>Level:</strong>
  <%= test_level(@test) %>
</p>

<div>
  <h2>Questions</h2>

  <p>
    <%= link_to 'New question', new_test_question_path(@test) %>
  </p>

  <table>
    <tr>
      <th>Text</th>
      <th colspan="3">Actions</th>
    </tr>

    <%= render @test.questions %>
  </table>
</div>

<p>
  <%= link_to 'Edit', edit_test_path(@test) %> |
  <%= link_to 'Back', tests_path %>
</p>
