<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :image_name %><br>
    <%= form.text_field :image_name %>
  </p>

  <p>
    <%= form.label :rule %><br>
    <%= form.text_field :rule %>
  </p>

  <p>
    <%= form.label :value %><br>
    <%= form.text_field :value %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 7, cols: 60 %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', admin_badges_path %>
