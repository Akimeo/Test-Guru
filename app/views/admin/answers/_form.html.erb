<p>
  <%= @answer.question.text %>
</p>

<%= form_with model: [:admin, @question, @answer] do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %><br>
    <%= form.check_box :correct %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', admin_question_path(@answer.question) %>
