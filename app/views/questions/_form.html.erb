<%= question_header(@question) %>

<%= form_with model: [@test, @question] do |form| %>
  <%= render 'shared/errors', resource: @question %>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, rows: 7, cols: 60 %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', @question.test %>
